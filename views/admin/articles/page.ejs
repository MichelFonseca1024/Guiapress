<%- include ("../../partials/header.ejs") -%>
<body>
  <%- include ("../../partials/homeNavbar.ejs") -%>
  <br />
  <br />
  <div class="container">
    <% result.articles.rows.forEach((article) => { %>
    <div class="card">
      <div class="card-header">
        <h2>
          <%- article.title %>
        </h2>
      </div>
      <div class="card-body">
        <a href="/article/<%-article.slug %> " class="btn btn-success"
          >Ler artigo</a
        >
      </div>
    </div>
    <br />
    <% }) %>

    <nav aria-label="Page navigation">
      <ul class="pagination d-flex justify-content-center">
      
        <% if(result.page > 1) { %>
          <li class="page-item"><a class="page-link" href="/articles/page/<%= result.page - 1%>" >A nterior</a></li>
        <% } %>
        <% if(result.next) { %>
          <li class="page-item"><a class="page-link" href="/articles/page/<%= result.page + 1%>">Proximo</a></li>
        <% } %>
      </ul>
    </nav>
  </div>
  <script></script>
</body>
<%- include ("../../partials/footer.ejs") -%>
